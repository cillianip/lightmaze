{
  "name": "light-maze",
  "version": "0.1.0",
  "description": "A browser-based puzzle game where you guide light through mirrors to activate crystals",
  "main": "public/js/main.js",
  "type": "module",
  "scripts": {
    "dev": "node serve.js",
    "dev:bundle": "esbuild public/js/main.js --bundle --sourcemap --servedir=public --serve=8080",
    "build": "esbuild public/js/main.js --bundle --minify --outfile=public/dist/bundle.js",
    "lint": "eslint public/js/**/*.js",
    "lint:fix": "eslint public/js/**/*.js --fix"
  },
  "keywords": [
    "game",
    "puzzle",
    "light",
    "maze",
    "canvas",
    "vanilla-js"
  ],
  "author": "Light Maze Team",
  "license": "MIT",
  "devDependencies": {
    "esbuild": "^0.19.0",
    "eslint": "^8.50.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}